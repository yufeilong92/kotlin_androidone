<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.backpacker.UtilsLibrary.view.AutoLinkStyleTextView android:layout_width="match_parent"
                                                            android:id="@+id/astv_content"
                                                            android:text="我已核对付款金额，仔细阅读并同意“购买须知”及团购“用户条款”"
                                                            app:AutoLinkStyleTextView_text_value="“购买须知”,“用户条款”"
                                                            app:AutoLinkStyleTextView_default_color="@color/black"
                                                            android:layout_height="wrap_content"/>
    <com.backpacker.UtilsLibrary.view.AutoLinkStyleTextView android:layout_width="match_parent"
                                                            android:id="@+id/tv_one"
                                                            app:AutoLinkStyleTextView_start_image="@mipmap/ic_qupai_subject_information"
                                                            app:AutoLinkStyleTextView_type="start_image"
                                                            android:text="活动介绍，开始以图片开头"
                                                            android:layout_height="60dp"/>

</LinearLayout>